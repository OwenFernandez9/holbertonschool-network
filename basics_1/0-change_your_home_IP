#!/usr/bin/env bash
# This script configures the /etc/hosts file to change the resolution of localhost and facebook.com.

if [ "$EUID" -ne 0 ]; then
  echo "Please run as root."
  exit 1
fi

cp /etc/hosts /etc/hosts.bak

if ! grep -q "127.0.0.2 localhost" /etc/hosts; then
    echo "127.0.0.2 localhost" >> /etc/hosts
fi

if ! grep -q "8.8.8.8 facebook.com" /etc/hosts; then
    echo "8.8.8.8 facebook.com" >> /etc/hosts
fi

echo "Configuration completed. Entries have been updated in /etc/hosts."